  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug AvalancheGo",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "preLaunchTask": "Prepare",
      "args": [
        "--public-ip=127.0.0.1",
        "--snow-sample-size=1",
        "--snow-quorum-size=1",
        "--http-port=9660",
        "--staking-port=9661",
        "--db-dir=${workspaceFolder}/../../db/node00/",
        "--staking-enabled=true",
        "--network-id=scdev",
        "--bootstrap-ips=",
        "--bootstrap-ids=",
        "--staking-tls-cert-file=${workspaceFolder}/config/keys/node00/node.crt",
        "--staking-tls-key-file=${workspaceFolder}/config/keys/node00/node.key",
        "--log-level=debug",
        "--plugin-dir=${workspaceFolder}/build/plugins",
        "--log-dir=${workspaceFolder}/../../logs/node00",
        "--validators-file=${workspaceFolder}/config/validators/scdev/1619370000.json",
        "--alert-apis=https://flare.network",
        "--xrp-apis=https://xrpl.flare.network:443,https://xrpl-1.flare.network:443,https://xrplcluster.com"
      ]
    }
  ]
}
